{
    "name": "cmdb",
    "type": "project",
    "description": "CMDB",
    "homepage": "https://cmdb.localsystems.tld/",
    "license": "MIT",
    "require": {
        "php": "^8.0",
        "codeigniter4/framework": "^4.1.4",
        "firebase/php-jwt": "^5.4",
        "phpoffice/phpspreadsheet": "^1.18",
        "zircote/swagger-php": "^3.2"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app",
            "Config\\": "app/Config"
        },
        "exclude-from-classmap": [
            "**/Database/Migrations/**"
        ]
    },
    "scripts": {
        "swagger": "./vendor/bin/openapi app/ -o public/swagger.json"
    },
    "prefer-stable": true
}